<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="Member">
 	<insert id = "save">
 		insert into member_table(m_id, m_password, m_name, m_email,m_phone)
 			values(#{m_id},#{m_password},#{m_name},#{m_email},#{m_phone})
 	</insert>  
 	
 	<!-- 로그인 -->
 	<select id = "login" parameterType="member" resultType="member">
 		select * from member_table where m_id = #{m_id} and m_password = #{m_password}
 	</select>
 	
 	<!-- findAll -->
 	<select id = "findAll" resultType="member">
 	select * from member_table
 	</select>
 	
 	<!-- detail -->
 	<select id = "detail" parameterType="long" resultType = "member">
 	select * from member_table where m_number = #{m_number}
 	</select>
 
 	<!-- delete -->
 	<select id = "delete" parameterType="long" resultType = "member">
 	delete from member_table where m_number = #{m_number} 
 	</select>
 
 	<!-- update -->
 	<select id = "update" parameterType="member">
 	update member_table set m_email =#{m_email}, m_phone =#{m_phone} where m_number = #{m_number} 
 	</select>
 	
 	<!-- idDuplicate -->
 	<select id = "idDuplicate" parameterType="String" resultType="String">
 	select m_id from member_table where m_id=#{m_id}
 	</select>
 </mapper>