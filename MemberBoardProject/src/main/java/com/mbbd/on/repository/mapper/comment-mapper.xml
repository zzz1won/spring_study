<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 
 <!-- 댓글작성 -->
  <mapper namespace="Comment">
  	<insert id="commentSave" parameterType="comment">
  		insert into comment_table (b_number, c_writer, c_comment, c_date)
  			values(#{b_number},#{c_writer},#{c_comment},now())
  	</insert>

<!-- b_number에 대한 댓글목록 출력 -->  
  <select id="commentAll" resultType="comment">
  	select*from comment_table where b_number = #{b_number}
  </select>	
  	
  	
  	
 
 
 
 
 </mapper>